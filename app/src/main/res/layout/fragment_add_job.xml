<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
          <variable
              name="addJobViewModel"
              type="com.cuongpq.basemvvm.ui.employer.add_job.AddJobViewModel" />
          <import type="android.view.View"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_main">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Tạo công việc"
                    android:textColor="#EDA441"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <EditText
                android:id="@+id/edJobName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_input_login"
                android:drawablePadding="15dp"
                android:fontFamily="sans-serif"
                android:hint="Vị trí tuyển dụng"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="#7C000000"
                android:textSize="20dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/custom_input_login"
                android:fontFamily="sans-serif">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:lines="10"
                    android:gravity="top"
                    android:hint="Mô tả công việc ..."
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/custom_input_login"
                android:fontFamily="sans-serif">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:lines="10"
                    android:gravity="top"
                    android:hint="Yêu cầu ứng viên ..."
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/custom_input_login"
                android:fontFamily="sans-serif">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:lines="10"
                    android:gravity="top"
                    android:hint="Quyền lợi ..."
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"/>
            </com.google.android.material.textfield.TextInputLayout>
            <EditText
                android:id="@+id/edJobAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/custom_input_login"
                android:drawablePadding="15dp"
                android:fontFamily="sans-serif"
                android:hint="Số lượng tuyển"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="#7C000000"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/custom_button_register"
                android:fontFamily="sans-serif"
                android:text="Khởi tạo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>


</layout>